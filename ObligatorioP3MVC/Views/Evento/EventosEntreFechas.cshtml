@model ObligatorioP3MVC.ViewModels.EventoServicioContratadoViewModel

@{
    ViewBag.Title = "EventosEntreFechas";
}

<h2>Eventos Entre Fechas</h2>



<table class="table table-hover">
    <tr>
        <th>Nombre Evento</th>
        <th>Organizador</th>
        <th>Fecha</th>
        <th>Direccion</th>
        <th>Tipo Evento</th>
        <th>Realizado</th>
    </tr>

    @foreach (var item in Model.Eventos)
    {
        string selectedRow = "";
        if (item.Nombre == ViewBag.NombreEvento)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organizador.NombreOrganizador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEvento.NombreTipoEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Realizado)
            </td>
            <td>
                @Html.ActionLink("Seleccionar", "EventosEntreFechas", new { nombreEvento = item.Nombre, nombreOrganizador = item.Organizador.NombreOrganizador })
            </td>
        </tr>
    }

</table>



<div>
    @Html.ActionLink("Volver al menú principal", "Index", "Home")
</div>